# Application Configuration
APP_NAME="Multi-Service Platform"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Identity Database (Default Connection)
DB_CONNECTION=identity_db
IDENTITY_DB_CONNECTION=mysql
IDENTITY_DB_HOST=127.0.0.1
IDENTITY_DB_PORT=3306
IDENTITY_DB_DATABASE=identity
IDENTITY_DB_USERNAME=root
IDENTITY_DB_PASSWORD=

# Platform Database
PLATFORM_DB_CONNECTION=mysql
PLATFORM_DB_HOST=127.0.0.1
PLATFORM_DB_PORT=3306
PLATFORM_DB_DATABASE=platform
PLATFORM_DB_USERNAME=root
PLATFORM_DB_PASSWORD=

# CMS Service Database
CMS_DB_CONNECTION=mysql
CMS_DB_HOST=127.0.0.1
CMS_DB_PORT=3306
CMS_DB_DATABASE=cms
CMS_DB_USERNAME=root
CMS_DB_PASSWORD=

# Add more service databases as needed:
# GAME_DB_DATABASE=game
# ROCKETS_DB_DATABASE=rockets

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
CACHE_PREFIX=

# Queue
QUEUE_CONNECTION=database

# Mail (for Fortify)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@platform.local"
MAIL_FROM_NAME="${APP_NAME}"

# Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1

# Fortify Features
FORTIFY_FEATURES=registration,reset-passwords,email-verification,update-profile-information,update-passwords,two-factor-authentication

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Vite
VITE_APP_NAME="${APP_NAME}"
